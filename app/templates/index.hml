<!DOCTYPE html>
<html>
<head>
    <title>News Scraper App</title>
</head>
<body>
    <h1>News Scraper App</h1>
    
    <form action="{{ url_for('scrape_data') }}" method="get">
        <button type="submit">Scrape Data</button>
    </form>

    <div>
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <ul class="flashes">
            {% for message in messages %}
            <li>{{ message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endwith %}
    </div>
</body>
</html>
